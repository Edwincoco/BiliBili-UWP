                    <Grid Height="20" Grid.Row="2">
                        <StackPanel Orientation="Horizontal" Margin="10,0" >
                            <FontIcon FontFamily="ms-appx:///Assets/logo.ttf#iconfont" Glyph="&#xe615;" Margin="0,0,5,0" Foreground="#FFA09D9D" FontSize="18"/>
                            <!--<Image Width="16" Height="16" Source="ms-appx:///Assets/Icon/ic_info_views2.png" Margin="0,3,5,0"></Image>-->
                            <!--<TextBlock Text="播放：" FontSize="14"  Foreground="White"></TextBlock>-->
                            <TextBlock Text="{Binding Path=play}" FontSize="13"  Foreground="Gray" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Right">
                            <FontIcon FontFamily="ms-appx:///Assets/logo.ttf#iconfont" Glyph="&#xe60b;" Margin="0,3,5,0" VerticalAlignment="Center" Foreground="#FFA09D9D" FontSize="18"/>
                            <!--<Image Width="16" Height="16" Source="ms-appx:///Assets/Icon/ic_info_danmakus2.png"  Margin="0,3,5,0"></Image>-->
                            <TextBlock Text="{Binding Path=danmaku}" FontSize="13"  Foreground="Gray" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Grid>
                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Path=title}" MaxWidth="320" TextWrapping="Wrap" MaxLines="2" TextTrimming="CharacterEllipsis" FontSize="13" ></TextBlock>
                    </StackPanel>
                </Grid>
